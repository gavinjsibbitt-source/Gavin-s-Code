class Food {
  
  constructor(x,y,type){
    
    this.x = x;
    this.y = y;
    this.type = type;
    this.CAndy =this.CAndy
    
    this.offsetX = 0;
    this.offsetY = 0;
    this.dragging = false;
    this.rollover = false;
    
    this.eaten = false; 
    this.time = false
  }
  
  drawFood(px,py){
    
     if (this.dragging) {
      this.x = px + this.offsetX;
      this.y = py + this.offsetY;
    }
    
    if(this.type == "meat"){
       image(meat, this.x, this.y, 125, 125);
      
    }
    if(this.type == "veggie"){
      image(veggie,this.x, this.y, 125, 125)
    }
    if(this.type == "sweet"){
      image(sweet,this.x, this.y, 125, 125)
    }
    
  }

  
    pressed(px, py){
    if (px > this.x && px < this.x + 125 && py > this.y && py < this.y + 125) {
   //   print("clicked on food");
      this.dragging = true;
      this.eaten = true
      this.offsetX = this.x - px;
      this.offsetY = this.y - py;
    }
  }
    
  notPressed(px, py){
    //print("mouse was released");
      this.dragging = false;     


      if(this.eaten == true && this.y>100 && this.y<400 && this.x>300 && this.x<400 ){
        
        print("fed monster")
        if(this.type == monst.type){
            score = score +1;
            print(score)
          //play sound: YUM! 
          }
        
        if(this.type != monst.type){
            score = score -1;
          print(score)
          //play sound : Yuck!
          }
        if(this.type == "veggie"){
          this.x=10
          this.y=130
          
        }
        if(this.type == "meat"){
         this.x=10
          this.y=1
         
        }
            if(this.type == "sweet"){
         this.x=0
          this.y=270
         
        }
      }
    
  }


}

class Monster {
  constructor(x,y,type,size){
    this.x = x;
    this.y = y;
    this.type = type;
    this.size = 1;
  }
  
  drawMonster(){
    if(this.type == "meat"){
      if (score <1){fat1=1
        image(img2, this.x, this.y-100, 600, 600);
      }
      if (score ==1){
          image(STM2,this.x,this.y,200,200)
      }
      if (score >=2){
        image(STM3,this.x,this.y,180,180)
      
      }
   
    }
    if(this.type == "veggie"){ slat1=1
     
      
       if (score <1){
        image(img, this.x, this.y, 190, 190)      }
      if (score ==1){
        image(STV2,this.x,this.y,190,190)      }
      if (score >=2){
        image(STV3,325,110,180,180)

      
      }
      
     
  
    }
    if(this.type == "sweet"){ Mat1=1
      
       if (score <1){
     image(img3, this.x, this.y, 200, 200)
       }
         if (score ==1){
        image(STC2,this.x,this.y,185,185)      
        }
      if (score >=2){
        image(STC3,this.x,this.y,185,185)
        }
   

    }
    
  }
}
  
  
