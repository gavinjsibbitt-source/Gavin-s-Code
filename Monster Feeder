function setup() {
  createCanvas(720, 400);
  background(0);
  stroke(255);
  cnv=createCanvas(720,400)
  
   Seaman.play()

   soundFormats('mp3')
   oblivion =loadSound('Oblivion.mp3')

  button = createButton('BEGIN');
  button2 = createButton('sound')
  ButtonCending = createButton('Candy failure ending')
  ButtonMending = createButton('Meat failure ending')
  ButtonSwending = createButton('Veggie failure ending')
  ButtonRonaldo= createButton('Ending 2')
  ButtonGronaldo = createButton('Ending 2')
  ButtonDronaldo = createButton('Ending 2')
  ButtonRonaldo.mouseClicked(Dance0)
  ButtonGronaldo.mouseClicked(Dance1)
   ButtonDronaldo.mouseClicked(Dance2)
  button.mouseClicked(buttonpressed)
  button2.mouseClicked(don)
  button2.doubleClicked(don2)

  button3= createButton('sound')
 
 button3.position(900,800)
 button3.mouseClicked(don3)
    ButtonCending.position(100,9000)
  ButtonMending.position(1000,900)
  ButtonSwending.position(700,800)
  
    ButtonCending.mouseClicked(Maned0)
  ButtonMending.mouseClicked(Maned2)
  ButtonSwending.mouseClicked(Maned1)
  
   ButtonRonaldo.position(900,900)
  ButtonGronaldo.position(900,900)
  ButtonDronaldo.position(900,900)
  m = new Food(10,1,"meat")
  v = new Food(0,130,"veggie")
  s = new Food(0, 275, "sweet")
  
  monst = new Monster(300,100,monsterTypes[int(random(0,3))])
 
  
}

function mousePressed() {
  m.pressed(mouseX, mouseY);
  v.pressed(mouseX,mouseY);
  s.pressed(mouseX,mouseY);
}

function mouseReleased() {
  m.notPressed();
  v.notPressed(); 
  s.notPressed(); 
}




function draw() {
background(255, 0, 255);
 image(Skarletking,0,skarl,800,600)
    fill(100)
  textSize(75)
   text(word,50, 10, 30, 100)
if (screen==0){
  line(a, 0, a, height);
  if (!Seaman.isPlaying){Seaman.pause()}
  fill(255,0,255);
  ellipse(61, 66, 106, 106);
  ellipse(61, 196, 106, 106)
  ellipse(61, 336, 106, 106)

  button2.position(800,800)
  button3.position(60,400)
  
skarl=900
 
  
  b.resize(600,440)
  image(b, 126, 0,900,400)
  if (score<-2 && fat1>0){ ButtonMending.position(114,400) ;ButtonRonaldo.position(255,400)
                        }
 if (score<-2 && slat1>0){ ButtonSwending.position(114,400);              ButtonGronaldo.position(255,400)}
if (score<-2 && Mat1>0){ ButtonCending.position(114,400);                   ButtonDronaldo.position(255,400)}
  
 
   monst.drawMonster(); 
  
   m.drawFood(mouseX, mouseY);

   v.drawFood(mouseX,mouseY);

   s.drawFood(mouseX,mouseY);
  
  //lose screen
  if (score < -2){
    image(Dark,darkone,0,600,400)
    noLoop()
    chocolate.play()
 
    
  }
  
  
  //win screen
  if (score >3){
    fill("turquoise")
    rect(0,0,width,height)
    fill("magenta")
    textSize(33)
    text("You won!", 300,200)
  }
 
}
}

